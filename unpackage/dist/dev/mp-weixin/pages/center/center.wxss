@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
/* 全局主色 */
.top {
  position: relative;
  overflow: hidden;
  padding-top: calc(25px + 52rpx);
  padding-bottom: 6rpx;
}
.top .u-bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 330rpx;
}
.top .user-wrapper {
  display: flex;
  flex-direction: column;
  flex-direction: row;
  align-items: center;
  position: relative;
  z-index: 5;
  padding: 20rpx 30rpx 60rpx;
}
.top .login-box {
  font-size: 36rpx;
  color: #fff;
}
.top .avatar {
  flex-shrink: 0;
  width: 130rpx;
  height: 130rpx;
  border-radius: 100px;
  margin-right: 24rpx;
  border: 4rpx solid #fff;
  background-color: #fff;
}
.top .username {
  font-size: 34rpx;
  color: #fff;
}
.top .user-group {
  align-self: flex-start;
  padding: 10rpx 16rpx;
  margin-top: 16rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 100rpx;
}
.top .arc-line {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 9;
  width: 100%;
  height: 32rpx;
}
.contain {
  padding: 10rpx 20rpx;
}
.contain .top-nav {
  background-color: #FFFFFF;
  padding: 30rpx 0;
  border-radius: 8px;
}
.contain .top-nav .tabNum {
  color: #303133;
  font-size: 34rpx;
  padding-top: 10rpx;
  font-weight: 500;
}
.contain .top-nav .tabName {
  color: #909399;
  font-size: 22rpx;
  padding-top: 10rpx;
}
.contain .center-nav {
  margin-top: 20rpx;
  background-color: #FFFFFF;
  padding: 30rpx 0;
  border-radius: 8px;
}
.contain .center-nav .order {
  padding: 10rpx 30rpx 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contain .center-nav .order .left {
  color: #303133;
  font-size: 32rpx;
  padding-top: 10rpx;
  font-weight: 600;
}
.contain .center-nav .order .right {
  font-size: 22rpx;
  color: #909399;
}
.contain .center-nav .order .right .text {
  margin-right: 8rpx;
}
.contain .center-nav .tabName {
  color: #909399;
  font-size: 26rpx;
  padding-top: 10rpx;
}
.contain .cell-list {
  background-color: #fff;
  margin-top: 20rpx;
  padding-top: 20rpx;
}
.contain .cell-list .cell {
  padding: 20rpx 30rpx 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.contain .cell-list .cell .left {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #303133;
  font-size: 30rpx;
}
.contain .cell-list .cell .left .text {
  padding-left: 10rpx;
}
.contain .cell-list .cell .right {
  font-size: 28rpx;
  color: #909399;
}

