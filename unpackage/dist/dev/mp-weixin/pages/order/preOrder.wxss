/* 全局主色 */
.wrapper {
  margin: 20rpx 20rpx 10rpx 20rpx;
  background-color: #fff;
  padding: 20rpx 20rpx 20rpx 20rpx;
  border-radius: 3px;
  color: #909399;
}
.wrapper .address {
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.wrapper .address .left {
  display: flex;
  align-items: center;
}
.wrapper .address .left .title {
  margin-left: 10rpx;
}
.wrapper .address .left .title .name {
  font-size: 14px;
  font-weight: 600;
  color: #303133;
}
.wrapper .address .left .title .desc {
  font-size: 14px;
}
.wrapper .address .right {
  position: absolute;
  right: 0;
}
.wrapper .address .lineImg {
  width: 710rpx;
  position: absolute;
  bottom: -30rpx;
  left: -20rpx;
}
.wrapper .goods {
  color: #303133;
}
.wrapper .goods .product {
  display: flex;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #eee;
}
.wrapper .goods .product:last-child {
  border-bottom: 0;
}
.wrapper .goods .product .right {
  margin-left: 20rpx;
}
.wrapper .goods .product .right .item-title {
  font-size: 14px;
  color: #303133;
  font-weight: bold;
  padding-top: 10rpx;
  padding-left: 10rpx;
  background-color: #fff;
}
.wrapper .goods .product .right .item-bottom {
  margin-top: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.wrapper .goods .product .right .item-bottom .item-price {
  display: flex;
  align-items: center;
  width: 250rpx;
  max-width: 250rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.wrapper .goods .product .right .item-bottom .item-price .new-price {
  font-weight: normal;
  font-size: 14px;
  color: #303133;
  padding: 5px 0 5px 2px;
}
.wrapper .goods .product .right .item-desc {
  font-weight: normal;
  font-size: 26rpx;
  color: #909399;
  padding-bottom: 5rpx;
  padding-left: 10rpx;
  background-color: #fff;
}
.wrapper .goods .info .cell-list {
  background-color: #fff;
}
.wrapper .goods .info .cell-list .cell {
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.wrapper .goods .info .cell-list .cell .left {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #303133;
  font-size: 30rpx;
}
.wrapper .goods .info .cell-list .cell .left .text {
  padding-left: 10rpx;
}
.wrapper .goods .info .cell-list .cell .right {
  font-size: 28rpx;
  color: #909399;
}
.wrapper .goods .price {
  text-align: right;
  font-weight: 800;
  border-top: 1px solid #eee;
  padding-top: 20rpx;
}
.wrapper .remark .title {
  color: #303133;
  font-weight: 800;
}
.wrapper .remark .textArea {
  margin-top: 20rpx;
}
.wrapper-bottom {
  margin-bottom: 120rpx;
}
.bottomView {
  box-shadow: 0 -1px 1px 0 rgba(0, 0, 0, 0.05);
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ffffff;
  z-index: 999;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.bottomView .bottomLeft {
  display: flex;
  align-items: center;
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
}
.bottomView .bottomLeft .clear {
  text-align: center;
  border-radius: 10%;
  color: #909399;
  font-size: 14px;
  margin-right: 20rpx;
}
.bottomView .bottomLeft .left {
  color: #ff536f;
  font-size: 16px;
  font-weight: 800;
}
.bottomView .bottomRight {
  display: flex;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
}
.bottomView .bottomRight .right {
  color: #fff;
  background: #ff536f;
  padding: 2rpx 20rpx;
  border-radius: 30rpx;
  margin-left: 20rpx;
}

